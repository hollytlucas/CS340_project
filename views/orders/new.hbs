{{> nav currentRoute="/orders" }}

<div id="orders-container" class="d-flex justify-content-between">

  <div id="add-order-container" class="m-3">
    <h2>Add an Order</h2>
    <p>To add an order, please enter the information below and click `Submit`!</p>
    <form id="add-order-form" method="POST" action="/orders/new">
      <div class="form-group">
        <label for="input-total-price">Total Price: </label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">$</span>
          </div>
          <input
            class="form-control"
            name="input-total-price"
            value=""
          />
        </div>
      </div>
      <div class="form-group">
        <label for="input-waiter-name">Waiter: </label>
          <select id="input-waiter-name" name="input-waiter-name">
            <option>Select one...</option>
            {{#each waiters}}
            <option>{{concat this.first_name " " this.last_name ": waiter " this.waiter_id }}</option>
            {{/each}}
          </select>
      </div>
      <div class="form-group">
        <label for="input-customer-id">Customer: </label>
          <select id="input-customer-name" name="input-customer-name">
            <option>Select one...</option>
            {{#each customers}}
            <option>{{concat this.first_name " " this.last_name ": customer " this.customer_id}}</option>
            {{/each}}
          </select>
      </div>
      <h2>Assign Menu Items to an Order:</h2>
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          value=""
          id={{concat "menuItem-" 1}}
          name={{concat "menuItem-" 1}}
          {{isChecked this.isOnOrder}}
        />
        <label class="form-check-label" for={{concat "menuItem-" 1}}>
          Sheet Pan Chicken with Mozzarella, Pesto, and Broccoli
        </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          value=""
          id={{concat "menuItem-" 2}}
          name={{concat "menuItem-" 2}}
          {{isChecked this.isOnOrder}}
        />
        <label class="form-check-label" for={{concat "menuItem-" 2}}>
          Summer Special Shrimp and Fruit Fried Rice
        </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          value=""
          id={{concat "menuItem-" 3}}
          name={{concat "menuItem-" 3}}
          {{isChecked this.isOnOrder}}
        />
        <label class="form-check-label" for={{concat "menuItem-" 3}}>
          Chipotle Peach Salsa with Cilantro
        </label>
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>

</div>