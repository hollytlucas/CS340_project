{{> nav currentRoute="/orders" }}

<div id="orders-container" class="d-flex justify-content-between">
  <div id="edit-order-container" class="m-3 w-40">
    <h2>Edit Order</h2>
    <form
        id="edit-order-form"
        class="form-group"
        method="POST"
        action="/orders/{{order.order_id}}/edit"
    >  
      <div class="m-3 form-group">
        <label for="input-order-price">Total Price:</label>
        <input name="input-order-price" value={{concat "$" order.total_price}}></input>
      </div>
      <div class="m-3 form-group">
        <label for="input-waiter-name">Waiter:</label>
        <select name="input-waiter-name">
          <option>{{getWaiterNameOnOrder waiters order}}</option>
          {{#each waiters}}
          <option>{{concat this.first_name " " this.last_name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="m-3 form-group">
        <label for="input-customer-name">Customer:</label>
        <select name="input-customer-name">
          <option>{{getCustomerNamesOnOrder customersOrders this}}</option>
          {{#each customers}}
          <option>{{concat this.first_name " " this.last_name}}</option>
          {{/each}}
        </select>
      </div>
      <h3>Assign Menu Items:</h3>
        <div class="form-group d-flex flex-column">
          {{#each menuItems}}
          <div>
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id={{concat "menuItem-" this.menu_item_id}}
              name={{concat "menuItem-" this.menu_item_id}}
              {{isChecked this.isOnOrder}}
            />
            <label
              class="form-check-label"
              for={{concat "menuItem-" this.menu_item_id}}
            >
              {{this.name}}
            </label>
          </div> 
          {{/each}} 
        </div>
        <button type="submit" class="btn btn-success mt-3" disabled>Submit</button>
    </form>
  </div>

</div>