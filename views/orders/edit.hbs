{{> nav currentRoute="/orders" }}


<div id="orders-container" class="d-flex justify-content-between">

  <div id="add-order-container" class="m-3">
    <h2>Edit Order# (order_id will go here)</h2>
    <p>To edit this order, please enter the information below and click `Submit`!</p>
    <form id="add-order-form" method="POST" action="/orders/new">
      <div class="form-group">
        <label for="input-total-price">Total Price: </label>
        <input
          class="form-control"
          type="text"
          name="input-total-price"
          id="input-total-price-html"
        />
      </div>
      <div class="form-group">
        <label for="input-employee_id">Employee ID: </label>
        <input
          class="form-control"
          type="text"
          name="input-employee-id"
          id="input-employee-id-html"
        />
      </div>
      <div class="form-group">
        <label for="input-customer_id">Customer ID: </label>
        <input
          class="form-control"
          type="text"
          name="input-customer-id"
          id="input-customer-id-html"
        />
      </div>
      <div class="form-group">
        <label for="input-customer_id">Menu Item IDs (comma separated): </label>
        <input
          class="form-control"
          type="text"
          name="input-customer-id"
          id="input-customer-id-html"
        />
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>

</div>