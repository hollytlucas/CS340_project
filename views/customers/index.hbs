{{> nav currentRoute="/customers" }}

<div
  id="customers-container"
  class="d-flex flex-column justify-content-between my-container"
>
  <div class="mt-3">
    <a class="btn btn-success mb-3" href="/customers/new">Add Customer</a>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">CUSTOMER ID</th>
        <th scope="col">FIRST NAME</th>
        <th scope="col">LAST NAME</th>
        <th scope="col">EMAIL</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each customers}}
        <tr>
          <th scope="row">{{this.customer_id}}</th>
          <td>{{this.first_name}}</td>
          <td>{{this.last_name}}</td>
          <td>{{this.email}}</td>
          <td>
            <a
              class="btn btn-sm btn-warning"
              href="/customers/{{this.customer_id}}/edit"
            >
              Edit
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
</div>