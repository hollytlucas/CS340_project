{{> nav currentRoute="/customers_private" }}

<div
  id="customers-container"
  class="d-flex flex-column justify-content-between my-container"
>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">CUSTOMER ID</th>
        <th scope="col">FIRST NAME</th>
        <th scope="col">LAST NAME</th>
        <th scope="col">EMAIL</th>
        <th scope="col">LOYALTY POINTS</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <th scope="row">{{this.customer_id}}</th>
          <td>{{this.first_name}}</td>
          <td>{{this.last_name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.loyalty_points}}</td>
          <td>
            <a
              class="btn btn-sm btn-warning"
              href="/customers_private/{{this.customer_id}}/edit"
            >
              Edit
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
    <div class="mt-3">
      <a class="btn btn-success mt-5" href="/customers_private/new">Add Customer</a>
    </div>

  <div id="customers_private_forms" class="d-flex flex-column">
    {{! Form to search by last name }}
    <div class="row mt-5">
      <div class="col-12">
        <h2>Customer Search</h2>
        <p>Search customers by partial or whole name using the fields below.</p>
        <form id="search-person-html" method="GET" action="/customers_private">
          <div class="form-group"></div>
                <label for="input-lname">First Name: </label>
                <input type="text" name="lname" id="input-lname-html-search" />
          </div>
          <div class="form-group">
                <label for="input-lname">Last Name: </label>
                <input type="text" name="lname" id="input-lname-html-search" />
          </div>
          <div>
            <button type="submit" class="btn btn-info">Search</button>
            <a class="btn btn-light" href="/customers_private">Reset</a>
          </div>
        </form>
      </div>
      {{! Form to search by last name }}
    </div>
  </div>
</div>